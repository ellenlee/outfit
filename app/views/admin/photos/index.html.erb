<h2>上傳照片一覽</h2>

<%= form_tag bulk_update_admin_photos_path do %>
	<div class="table-responsive" style="overflow-x: visible;">
		<table class="table table-condensed table-bordered">
			<tr>
				<td></td>
				<td>#</td>
				<td>照片</td>
				<td>上傳者</td>
				<td>時間</td>
				<td>option</td>
				<td>note</td>	
			</tr>
			<% @photos.each do |photo| %>
			<tr>
				<td><%= check_box_tag "ids[]", photo.id, false %></td>
				<td><%= photo.id %></td>
				<td style="overflow: hidden"><%= link_to image_tag(photo.img.url(:medium), width: "100px"), photo.img.url, target: "_blank" %></td>
				<td><%= photo.asker_email %></td>
				<td><%= photo.created_at.strftime('%Y-%m-%d %H:%M') %></td>
				<td>
					<ul>
						<% photo.options.each do |opt| %>
							<li><%= opt.description %></li>
						<% end %>
					</ul>
				<td><%= photo.note_content %></td>
			</tr>
			<% end %>
		</table>
	</div>

	<%= submit_tag "Delete", data: {comfirm: "Are you sure? "} %>
<% end %>
